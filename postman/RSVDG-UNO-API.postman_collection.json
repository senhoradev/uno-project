        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                "var jsonData = pm.response.json();",
                "if (jsonData.access_token) {",
                "    pm.collectionVariables.set(\"token\", jsonData.access_token);",
                "    ",
                "    var template = `",
                "    <html>",
                "    <head>",
                "        <style>",
                "            body { font-family: Arial, sans-serif; padding: 20px; background: #1e1e1e; color: #fff; }",
                "            .container { background: #2d2d2d; padding: 20px; border-radius: 8px; }",
                "            h3 { color: #4CAF50; margin-bottom: 15px; }",
                "            .label { color: #888; margin-bottom: 5px; }",
                "            .token-box { background: #1e1e1e; padding: 15px; border-radius: 4px; word-break: break-all; margin-bottom: 15px; border: 1px solid #444; font-family: monospace; user-select: all; cursor: text; }",
                "            .copy-btn { background: #4CAF50; color: white; border: none; padding: 10px 20px; border-radius: 4px; cursor: pointer; font-size: 14px; }",
                "            .copy-btn:hover { background: #45a049; }",
                "            .copied { background: #2196F3 !important; }",
                "            .hidden-input { position: absolute; left: -9999px; }",
                "        </style>",
                "    </head>",
                "    <body>",
                "        <div class='container'>",
                "            <h3>Login realizado com sucesso!</h3>",
                "            <div class='token-box' id='tokenText' onclick='selectToken()'>{{token}}</div>",
                "            <input type='text' id='hiddenInput' class='hidden-input' value='{{token}}' />",
                "            <button class='copy-btn' onclick='copyToken()'>Copiar Token</button>",
                "            <span id='status' style='margin-left: 10px; color: #4CAF50;'></span>",
                "        </div>",
                "        <script>",
                "            function selectToken() {",
                "                var range = document.createRange();",
                "                range.selectNodeContents(document.getElementById('tokenText'));",
                "                var sel = window.getSelection();",
                "                sel.removeAllRanges();",
                "                sel.addRange(range);",
                "            }",
                "            function copyToken() {",
                "                var input = document.getElementById('hiddenInput');",
                "                input.select();",
                "                input.setSelectionRange(0, 99999);",
                "                document.execCommand('copy');",
                "                document.getElementById('status').textContent = 'Copiado!';",
                "                setTimeout(function() {",
                "                    document.getElementById('status').textContent = '';",
                "                }, 2000);",
                "            }",
                "        </script>",
                "    </body>",
                "    </html>",
                "    `;",
                "    ",
                "    pm.visualizer.set(template, { token: jsonData.access_token });",
                "}"
                ],
                "type": "text/javascript"
              }
            }
